{
  "extends": "gts/tslint.json",
  "rules": {
  "radix": true,
  "variable-name": {
  "options": [
    "ban-keywords",
    "check-format",
    "allow-leading-underscore",
    "allow-pascal-case",
    "allow-snake-case"
    ]
  }
  },
  "linterOptions": {
    "exclude": [
      "**/*.json"
    ]

  }
}
